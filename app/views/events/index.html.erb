<h1>Listing events</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Enddate</th>
      <th>Imagethumburl</th>
      <th>Moreinfo</th>
      <th>Shortdescription</th>
      <th>Title</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.address %></td>
        <td><%= event.endDate %></td>
        <td><%= event.imageThumbUrl %></td>
        <td><%= event.moreInfo %></td>
        <td><%= event.shortDescription %></td>
        <td><%= event.title %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

